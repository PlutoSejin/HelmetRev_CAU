<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FixInfoActivity"
    android:orientation="vertical"
    android:background="#FFFFFF"
    >

    <FrameLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/alarm"/>

        <ImageButton
            android:id="@+id/btn_info"
            android:layout_width="50dp"
            android:layout_height="51dp"
            android:src="@drawable/person"
            android:layout_marginLeft="329dp"
            android:layout_marginTop="79dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:padding="0sp"
            />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/btn_gohome"
            android:src="@drawable/home"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:padding="0sp"
            android:background="#00ff0000"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="190dp"/>
    </FrameLayout>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_below="@+id/toolbar"
        android:id="@+id/scrollview"
        >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layout2"
            android:orientation="horizontal"
            >
            <Switch
                android:id="@+id/switch1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="배터리 부족 알림"
                android:textSize="20dp"
                android:switchPadding="120dp"
                android:layout_marginLeft="50dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout2"
            android:id="@+id/layout3"
            android:orientation="vertical"
            android:layout_marginTop="25dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="그래프 선 굵기"
                android:textSize="20dp"
                android:layout_marginLeft="50dp"
                android:textColor="@color/blackColor"/>
            <SeekBar
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:max="12"
                android:layout_marginLeft="50dp"
                android:progressDrawable="@drawable/seek_bar"
                android:thumb="@drawable/seek_thumb"
                android:id="@+id/seekbar_thick"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout3"
            android:id="@+id/layout4"
            android:orientation="vertical"
            android:layout_marginTop="25dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="그래프 색깔"
                android:textSize="20dp"
                android:layout_marginLeft="50dp"
                android:textColor="@color/blackColor"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textSize="15dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/blackColor"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:id="@+id/radiogroup1"
                >
                <RadioButton
                    android:layout_weight="1"
                    android:text="빨간색"
                    android:layout_marginLeft="40dp"
                    android:id="@+id/red_rb_btn_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="파란색"
                    android:id="@+id/blue_rb_btn_today"
                    android:textSize="15dp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="초록색"
                    android:id="@+id/green_rb_btn_today"
                    android:textSize="15dp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="검정색"
                    android:id="@+id/black_rb_btn_today"
                    android:textSize="15dp"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recent 5 days"
                android:textSize="15dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/blackColor"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:id="@+id/radiogroup2"
                >
                <RadioButton
                    android:layout_weight="1"
                    android:text="회색"
                    android:layout_marginLeft="35dp"
                    android:id="@+id/gray_rb_btn_r5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"/>

                <RadioButton
                    android:id="@+id/sky_rb_btn_r5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"
                    android:text="하늘색" />

                <RadioButton
                    android:id="@+id/bgreen_rb_btn_r5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="밝은 초록색" />
                <RadioButton
                    android:id="@+id/purple_rb_btn_r5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:text="보라색" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detail"
                android:textSize="15dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/blackColor"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:id="@+id/radiogroup3"
                >
                <RadioButton
                    android:layout_weight="1"
                    android:text="빨간색"
                    android:layout_marginLeft="40dp"
                    android:id="@+id/red_rb_btn_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="파란색"
                    android:id="@+id/blue_rb_btn_detail"
                    android:textSize="15dp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="초록색"
                    android:id="@+id/green_rb_btn_detail"
                    android:textSize="15dp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="검정색"
                    android:id="@+id/black_rb_btn_detail"
                    android:textSize="15dp"/>
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout4"
            android:id="@+id/layout5"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="현재 Data 평균 기간 설정"
                android:textSize="20dp"
                android:layout_marginLeft="50dp"
                android:textColor="@color/blackColor"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/all_days_average"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="평균:"
                        android:textSize="15dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="2021"
                        android:textSize="15dp"
                        android:id="@+id/startdate_year"
                        android:textColor="@color/blackColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="/"
                        android:textSize="15dp"
                        android:textColor="@color/blackColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="05"
                        android:textSize="15dp"
                        android:id="@+id/startdate_month"
                        android:textColor="@color/blackColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="/"
                        android:textSize="15dp"
                        android:textColor="@color/blackColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="16"
                        android:id="@+id/startdate_day"
                        android:textSize="15dp"
                        android:textColor="@color/blackColor"/>

                    <ImageButton
                        android:id="@+id/startdate"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:adjustViewBounds="true"
                        android:background="@null"
                        android:onClick="showDatePicker"
                        android:padding="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/calendarbtn" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="~"
                        android:textSize="15dp"
                        android:textColor="@color/blackColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="2021"
                        android:textSize="15dp"
                        android:id="@+id/enddate_year"
                        android:textColor="@color/blackColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="/"
                        android:textSize="15dp"
                        android:textColor="@color/blackColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="05"
                        android:id="@+id/enddate_month"
                        android:textSize="15dp"
                        android:textColor="@color/blackColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="/"
                        android:textSize="15dp"
                        android:textColor="@color/blackColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="16"
                        android:id="@+id/enddate_day"
                        android:textSize="15dp"
                        android:textColor="@color/blackColor"/>

                    <ImageButton
                        android:id="@+id/enddate"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:adjustViewBounds="true"
                        android:background="@null"
                        android:onClick="showDatePicker2"
                        android:padding="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/calendarbtn" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/recent_5days_average"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="최근 5회 평균"
                        android:textSize="15dp" />
                </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout5"
            android:id="@+id/layout6"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="과거 Data 평균 기간 설정"
                android:textSize="20dp"
                android:layout_marginLeft="50dp"
                android:textColor="@color/blackColor"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/all_days_average_old"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="평균:"
                        android:textSize="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="2021"
                        android:textSize="15dp"
                        android:id="@+id/startdate_year_old"
                        android:textColor="@color/blackColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="/"
                        android:textSize="15dp"
                        android:textColor="@color/blackColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="05"
                        android:textSize="15dp"
                        android:id="@+id/startdate_month_old"
                        android:textColor="@color/blackColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="/"
                        android:textSize="15dp"
                        android:textColor="@color/blackColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="16"
                        android:id="@+id/startdate_day_old"
                        android:textSize="15dp"
                        android:textColor="@color/blackColor"/>

                    <ImageButton
                        android:id="@+id/startdate_old"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:adjustViewBounds="true"
                        android:background="@null"
                        android:onClick="showDatePicker3"
                        android:padding="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/calendarbtn" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="~"
                        android:textSize="15dp"
                        android:textColor="@color/blackColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="2021"
                        android:textSize="15dp"
                        android:id="@+id/enddate_year_old"
                        android:textColor="@color/blackColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="/"
                        android:textSize="15dp"
                        android:textColor="@color/blackColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="05"
                        android:id="@+id/enddate_month_old"
                        android:textSize="15dp"
                        android:textColor="@color/blackColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="/"
                        android:textSize="15dp"
                        android:textColor="@color/blackColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="16"
                        android:id="@+id/enddate_day_old"
                        android:textSize="15dp"
                        android:textColor="@color/blackColor"/>

                    <ImageButton
                        android:id="@+id/enddate_old"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:adjustViewBounds="true"
                        android:background="@null"
                        android:onClick="showDatePicker4"
                        android:padding="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/calendarbtn" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/recent_5days_average_old"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="최근 5회 평균"
                    android:textSize="15dp" />
                </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_below ="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:gravity="bottom">

        <ImageButton
            android:id="@+id/btn_record"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="0dp"
            android:src="@drawable/databutton_not"
            android:adjustViewBounds="true"
            android:scaleType="fitXY">

        </ImageButton>


        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btn_support"
            android:padding="0dp"
            android:src="@drawable/supportbutton_not"
            android:adjustViewBounds="true"
            android:scaleType="fitXY">

        </ImageButton>

        <ImageButton
            android:id="@+id/btn_user"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:src="@drawable/settingbutton"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>

    </LinearLayout>
</RelativeLayout>
